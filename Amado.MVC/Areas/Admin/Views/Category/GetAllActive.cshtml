@model List<CategoryDto>
@{
    ViewData["Title"] = "Admin Aktif Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-6 col-md-8">
    <h5 class="mt-3">Kategoriler</h5>
    <div class="amado-btn-group mb-2">
        <a class="btn amado-btn" asp-action="Add"> Yeni Kategori Ekle</a>
        <a class="btn amado-btn" asp-action="GetAllInActive">İnaktif Kategoriler</a>
    </div>
    <div class="text-danger">
        @if (ViewBag.Error != null)
        {
            <p class="text-danger">ViewBag.Error</p>
        }
    </div>
    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.CategoryName</td>
                        <td class="d-flex p-2">
                            <a class="btn btn-secondary btn-sm" asp-action="Update" asp-route-id="@category.Id">Güncelle</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@category.Id">Sil</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>
                        Herhangi bir kategori bulunamadı!
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>